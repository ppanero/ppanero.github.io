{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "object-curly-newline": 0,
    "react/jsx-filename-extension": [
      1, { "extensions": [".js", ".jsx"] }
    ],
    "react/jsx-one-expression-per-line": 0,
    "react/react-in-jsx-scope": 0  // Not needed as of React 17

  }
}